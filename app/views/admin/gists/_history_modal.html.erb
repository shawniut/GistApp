<!-- The History Modal -->
<div class="modal" id="historyModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Change History</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <table class="table">
          <thead>
            <th>Commited At</th>
            <th>Additions</th>
            <th>Deletions</th>
            <th>Total</th>
          </thead>

          <tbody data-bind='foreach:$root.gist().histories'>
            <tr>
              <td data-bind='text:committed_at_display'></td>
              <td data-bind='text:additions' class="text-success"></td>
              <td data-bind='text:deletions' class="text-danger"></td>
              <td data-bind='text:total'></td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>